BAS HARFLERE GORE
#include<stdio.h>
#include<conio.h>
#include<ctype.h>
void BuyukHarf(char[]);
void main()
{
	char cumle[100],devamM覺='e';
	do
	{
	printf("\nCumleyi giriniz:");
	gets(cumle);
	BuyukHarf(cumle);
	printf("Devam etmek istiyor musunuz?(e/h)");
	devamM覺=getche();
	}while(devamM覺=='E' || devamM覺=='e');
}
void BuyukHarf(char a[])
{
	printf("Kisaltma:");
	a[0]=toupper(a[0]);
	printf("%c",a[0]);
	for (int i = 0;a[i]!=NULL ; i++)
	{
		if(a[i]==' ')
		{
			a[i+1]=toupper(a[i+1]);
			printf("%c",a[i+1]);
		}	
	}
	printf("\n");
}
